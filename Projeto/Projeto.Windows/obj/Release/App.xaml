            <Setter Property="Text" Value="Microsodt Innovation Center" />
        </Style>
    </Application.Resources>
    <TextBlock Style="{StaticResource TextBlockCustom}"></TextBlock>-->
    <Application.Resources>
        <Style x:Key="fontePrincipal" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Sans-serif" />
            <Setter Property="FontSize" Value="60" />
            <Setter Property="Foreground" Value="Brown" />
            <Setter Property="TextWrapping" Value="WrapWholeWords" />
        </Style>
        
        <Style x:Key="checkbox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="Brown" />
        </Style>

        <Style x:Key="botaoFundoBacana" TargetType="Button">
            <Setter Property="Background" Value="Brown" />
            <Setter Property="BorderBrush" Value="White" />
            <Setter Property="BorderThickness" Value="3" />
            <Setter Property="FontFamily" Value="Impact" />
            <Setter Property="FontWeight" Value="Light" />
        </Style>


        <Style x:Key="radioButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="Brown" />
        </Style>
        
        <Style x:Key="listboxRanking" TargetType="ListBox">
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontSize" Value="25" />
            
            
        </Style>
        
       

        <Style x:Key="iniciarExc" TargetType="Button">
            <Setter Property="FontWeight" Value="ExtraBlack" />
            <Setter Property="FontSize" Value="45" />
            <Setter Property="BorderThickness" Value="7" />
            <Setter Property="Background" Value="Brown" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="White" />
        </Style>
        
        <Style x:Key="bQuest" TargetType="Button">
            <Setter Property="Foreground" Value="Brown" />
            <Setter Property="BorderThickness" Value="4"/>
            <Setter Property="BorderBrush" Value="Brown" />
        </Style>
    </Application.Resources>
</Application>

