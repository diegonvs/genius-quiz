            <RadioButton x:ConnectionId='3'                            x:Name="Variedades" Content="Variedades" ></RadioButton>                      
            <Button x:ConnectionId='4' Content="Enviar" x:Name="Enviar"                     ></Button>
       
        </StackPanel>
